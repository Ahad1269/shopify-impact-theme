{% doc %}
  @prompt
    A picture ensuring that customers Mug is safe
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-mug-safety-container-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.content_gap }}px;
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    max-width: 100%;
  }

  .ai-mug-safety-image-wrapper-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.image_width }}px;
    height: {{ block.settings.image_width }}px;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .ai-mug-safety-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-mug-safety-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-mug-safety-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    color: #999;
  }

  .ai-mug-safety-content-{{ ai_gen_id }} {
    flex-grow: 1;
    min-width: 0;
  }

  .ai-mug-safety-title-{{ ai_gen_id }} {
    margin: 0 0 8px 0;
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    color: {{ block.settings.title_color }};
    line-height: 1.3;
  }

  .ai-mug-safety-description-{{ ai_gen_id }} {
    margin: 0 0 16px 0;
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    line-height: 1.5;
  }

  .ai-mug-safety-features-{{ ai_gen_id }} {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .ai-mug-safety-feature-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: {{ block.settings.feature_size }}px;
    color: {{ block.settings.feature_color }};
  }

  .ai-mug-safety-feature-icon-{{ ai_gen_id }} {
    width: 16px;
    height: 16px;
    color: {{ block.settings.icon_color }};
    flex-shrink: 0;
  }

  .ai-mug-safety-badge-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 6px 12px;
    background-color: {{ block.settings.badge_background }};
    color: {{ block.settings.badge_text_color }};
    border-radius: 20px;
    font-size: 12px;
    font-weight: 500;
    margin-top: 12px;
  }

  .ai-mug-safety-badge-icon-{{ ai_gen_id }} {
    width: 14px;
    height: 14px;
  }

  @media screen and (max-width: 749px) {
    .ai-mug-safety-container-{{ ai_gen_id }} {
      flex-direction: column;
      text-align: center;
      gap: 20px;
    }

    .ai-mug-safety-image-wrapper-{{ ai_gen_id }} {
      width: {{ block.settings.image_width | times: 0.8 }}px;
      height: {{ block.settings.image_width | times: 0.8 }}px;
    }

    .ai-mug-safety-features-{{ ai_gen_id }} {
      align-items: center;
    }
  }
{% endstyle %}

<div
  class="ai-mug-safety-container-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-mug-safety-image-wrapper-{{ ai_gen_id }}">
    {% if block.settings.safety_image %}
      <img
        src="{{ block.settings.safety_image | image_url: width: 400 }}"
        alt="{{ block.settings.safety_image.alt | escape }}"
        class="ai-mug-safety-image-{{ ai_gen_id }}"
        loading="lazy"
        width="{{ block.settings.image_width }}"
        height="{{ block.settings.image_width }}"
      >
    {% else %}
      <div class="ai-mug-safety-image-placeholder-{{ ai_gen_id }}">
        {{ 'product-apparel-1' | placeholder_svg_tag }}
      </div>
    {% endif %}
  </div>

  <div class="ai-mug-safety-content-{{ ai_gen_id }}">
    {% if block.settings.title != blank %}
      <h3 class="ai-mug-safety-title-{{ ai_gen_id }}">{{ block.settings.title }}</h3>
    {% endif %}

    {% if block.settings.description != blank %}
      <div class="ai-mug-safety-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
    {% endif %}

    <ul class="ai-mug-safety-features-{{ ai_gen_id }}">
      {% if block.settings.feature_1 != blank %}
        <li class="ai-mug-safety-feature-{{ ai_gen_id }}">
          <svg class="ai-mug-safety-feature-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="20 6 9 17 4 12"></polyline>
          </svg>
          {{ block.settings.feature_1 }}
        </li>
      {% endif %}

      {% if block.settings.feature_2 != blank %}
        <li class="ai-mug-safety-feature-{{ ai_gen_id }}">
          <svg class="ai-mug-safety-feature-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="20 6 9 17 4 12"></polyline>
          </svg>
          {{ block.settings.feature_2 }}
        </li>
      {% endif %}

      {% if block.settings.feature_3 != blank %}
        <li class="ai-mug-safety-feature-{{ ai_gen_id }}">
          <svg class="ai-mug-safety-feature-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="20 6 9 17 4 12"></polyline>
          </svg>
          {{ block.settings.feature_3 }}
        </li>
      {% endif %}

      {% if block.settings.feature_4 != blank %}
        <li class="ai-mug-safety-feature-{{ ai_gen_id }}">
          <svg class="ai-mug-safety-feature-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="20 6 9 17 4 12"></polyline>
          </svg>
          {{ block.settings.feature_4 }}
        </li>
      {% endif %}
    </ul>

    {% if block.settings.show_safety_badge %}
      <div class="ai-mug-safety-badge-{{ ai_gen_id }}">
        <svg class="ai-mug-safety-badge-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
          <polyline points="9 12 10.5 13.5 15 9"></polyline>
        </svg>
        {{ block.settings.badge_text }}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Mug safety assurance",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "image_picker",
      "id": "safety_image",
      "label": "Safety image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Safe & Certified Mugs"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Our mugs meet the highest safety standards to ensure your drinking experience is both enjoyable and secure."
    },
    {
      "type": "text",
      "id": "feature_1",
      "label": "Safety feature 1",
      "default": "BPA-free materials"
    },
    {
      "type": "text",
      "id": "feature_2",
      "label": "Safety feature 2",
      "default": "Food-grade ceramic coating"
    },
    {
      "type": "text",
      "id": "feature_3",
      "label": "Safety feature 3",
      "default": "Lead-free glazing"
    },
    {
      "type": "text",
      "id": "feature_4",
      "label": "Safety feature 4",
      "default": "Dishwasher safe"
    },
    {
      "type": "checkbox",
      "id": "show_safety_badge",
      "label": "Show safety badge",
      "default": true
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge text",
      "default": "Safety Certified"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "image_width",
      "min": 80,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Image width",
      "default": 120
    },
    {
      "type": "range",
      "id": "content_gap",
      "min": 16,
      "max": 60,
      "step": 4,
      "unit": "px",
      "label": "Content spacing",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding",
      "min": 16,
      "max": 60,
      "step": 4,
      "unit": "px",
      "label": "Block padding",
      "default": 32
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#f8f9fa"
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 40,
      "step": 4,
      "unit": "px",
      "label": "Border radius",
      "default": 16
    },
    {
      "type": "range",
      "id": "image_border_radius",
      "min": 0,
      "max": 40,
      "step": 4,
      "unit": "px",
      "label": "Image border radius",
      "default": 12
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "title_size",
      "min": 16,
      "max": 32,
      "step": 2,
      "unit": "px",
      "label": "Title size",
      "default": 20
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title color",
      "default": "#1a1a1a"
    },
    {
      "type": "range",
      "id": "description_size",
      "min": 12,
      "max": 18,
      "step": 1,
      "unit": "px",
      "label": "Description size",
      "default": 14
    },
    {
      "type": "color",
      "id": "description_color",
      "label": "Description color",
      "default": "#666666"
    },
    {
      "type": "range",
      "id": "feature_size",
      "min": 12,
      "max": 16,
      "step": 1,
      "unit": "px",
      "label": "Feature text size",
      "default": 14
    },
    {
      "type": "color",
      "id": "feature_color",
      "label": "Feature text color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "icon_color",
      "label": "Check icon color",
      "default": "#22c55e"
    },
    {
      "type": "header",
      "content": "Safety badge"
    },
    {
      "type": "color",
      "id": "badge_background",
      "label": "Badge background",
      "default": "#22c55e"
    },
    {
      "type": "color",
      "id": "badge_text_color",
      "label": "Badge text color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Mug safety assurance"
    }
  ]
}
{% endschema %}