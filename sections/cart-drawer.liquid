<!-- Rabisa Store - Professional Payment Section -->
<style>
  .payment-section {
    background: #f9fafb;
    border-radius: 16px;
    padding: 24px;
    margin-top: 25px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.07);
    font-family: "Poppins", sans-serif;
  }

  .payment-section label {
    font-weight: 700;
    font-size: 16px;
    color: #111;
    margin-bottom: 10px;
    display: block;
  }

  .payment-select {
    width: 100%;
    padding: 12px;
    border-radius: 12px;
    border: 1px solid #ccc;
    background: #fff;
    font-size: 15px;
    transition: all 0.25s ease;
  }

  .payment-select:focus {
    border-color: #111;
    box-shadow: 0 0 0 4px rgba(0,0,0,0.05);
  }

  /* Info boxes */
  .payment-info {
    margin-top: 18px;
    background: #fff;
    border: 1px solid #ddd;
    border-radius: 12px;
    padding: 16px;
    display: none;
    animation: fadeIn 0.4s ease;
  }
  .payment-info.active {
    display: block;
  }
  .payment-info strong {
    color: #000;
  }

  /* Form design */
  .checkout-form {
    margin-top: 20px;
    background: #fff;
    padding: 18px;
    border-radius: 12px;
    border: 1px solid #ddd;
  }

  .form-group {
    position: relative;
    margin-bottom: 18px;
  }

  .form-group input {
    width: 100%;
    padding: 12px 10px;
    border: 1px solid #ccc;
    border-radius: 10px;
    font-size: 15px;
    outline: none;
    background: transparent;
    transition: all 0.2s ease;
  }

  .form-group label {
    position: absolute;
    top: 50%;
    left: 12px;
    transform: translateY(-50%);
    color: #777;
    font-size: 14px;
    background: #fff;
    padding: 0 6px;
    pointer-events: none;
    transition: 0.2s ease all;
  }

  .form-group input:focus {
    border-color: #111;
    box-shadow: 0 0 0 3px rgba(0,0,0,0.08);
  }

  .form-group input:focus + label,
  .form-group input:not(:placeholder-shown) + label {
    top: -10px;
    left: 10px;
    font-size: 12px;
    font-weight: 600;
    color: #111;
  }

  .required {
    color: #e63946;
  }

  /* Checkout button */
  .checkout-btn {
    width: 100%;
    margin-top: 18px;
    background: #111;
    color: #fff;
    padding: 14px;
    border: none;
    border-radius: 10px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: 0.25s ease;
  }

  .checkout-btn:hover {
    background: #000;
  }

  .checkout-btn:disabled {
    background: #ccc;
    cursor: not-allowed;
  }

  @keyframes fadeIn {
    from {opacity: 0; transform: translateY(5px);}
    to {opacity: 1; transform: translateY(0);}
  }

  @media (max-width: 600px) {
    .payment-section {
      padding: 16px;
    }
  }
</style>

<div class="payment-section">
  <label for="paymentMethod">Choose Payment Method:</label>
  <select id="paymentMethod" class="payment-select">
    <option value="cod">üíµ Cash on Delivery</option>
    <option value="jazzcash">üì± JazzCash (5% OFF)</option>
    <option value="bank">üè¶ Meezan Bank (5% OFF)</option>
  </select>

  <!-- JazzCash Info -->
  <div id="jazzInfo" class="payment-info">
    <strong>JazzCash Payment Details:</strong><br>
    Account Number: <b>0321-7815858</b><br>
    After sending payment, share your <b>receipt screenshot or number</b> on WhatsApp: <b>0321-7815858</b>.<br><br>
    <em>5% discount will be applied automatically.</em>
  </div>

  <!-- Meezan Bank Info -->
  <div id="bankInfo" class="payment-info">
    <strong>Meezan Bank Details:</strong><br>
    Account Title: <b>RABISA STORE</b><br>
    IBAN: <b>PK47 MEZN 0004 0301 0456 4834</b><br>
    Branch Code: <b>0403</b><br>
    Branch: <b>Peoples Colony, Faisalabad</b><br>
    Send receipt screenshot to <b>rabistastore@gmail.com</b> or WhatsApp: <b>+92 321 7815858</b>.<br><br>
    <em>5% discount will be applied automatically.</em>
  </div>

  <!-- Checkout Form -->
  <form id="checkoutForm" class="checkout-form">
    <div class="form-group">
      <input type="text" id="name" name="name" placeholder=" " required>
      <label for="name">Full Name <span class="required">*</span></label>
    </div>

    <div class="form-group">
      <input type="email" id="email" name="email" placeholder=" " required>
      <label for="email">Email <span class="required">*</span></label>
    </div>

    <div class="form-group">
      <input type="tel" id="phone" name="phone" placeholder=" " required>
      <label for="phone">Phone Number <span class="required">*</span></label>
    </div>

    <div class="form-group">
      <input type="text" id="address" name="address" placeholder=" ">
      <label for="address">Address</label>
    </div>

    <button type="button" id="checkoutBtn" class="checkout-btn" disabled>Proceed to Checkout</button>
  </form>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const select = document.getElementById('paymentMethod');
    const jazzBox = document.getElementById('jazzInfo');
    const bankBox = document.getElementById('bankInfo');
    const checkoutBtn = document.getElementById('checkoutBtn');
    const form = document.getElementById('checkoutForm');

    // Show correct info + apply discount
    select.addEventListener('change', function() {
      jazzBox.classList.remove('active');
      bankBox.classList.remove('active');

      if (this.value === 'jazzcash') {
        jazzBox.classList.add('active');
        window.location.href = '/discount/JAZZ20?redirect=/cart';
      } else if (this.value === 'bank') {
        bankBox.classList.add('active');
        window.location.href = '/discount/EASYP20?redirect=/cart';
      } else {
        window.location.href = '/cart';
      }
    });

    // Enable button when form is complete
    form.addEventListener('input', function() {
      const allFilled = [...form.querySelectorAll('input[required]')].every(input => input.value.trim() !== '');
      checkoutBtn.disabled = !allFilled;
    });

    checkoutBtn.addEventListener('click', function() {
      alert('Thank you! You will be redirected to the secure checkout page.');
      window.location.href = '/checkout';
    });
  });
</script>
