<!-- Clean Cart Drawer -->
<div id="CartDrawer" class="cart-drawer">
  <div class="cart-drawer-header">
    <h2>Your Cart</h2>
    <button type="button" class="cart-drawer-close" aria-label="Close Cart">&times;</button>
  </div>

  <div class="cart-drawer-body">
    {% if cart.item_count > 0 %}
      <ul class="cart-items">
        {% for item in cart.items %}
          <li class="cart-item">
            <img src="{{ item.image | img_url: 'small' }}" alt="{{ item.title }}">
            <div class="cart-item-info">
              <h4>{{ item.product.title }}</h4>
              <p>{{ item.variant.title }}</p>
              <p>{{ item.quantity }} Ã— {{ item.price | money }}</p>
            </div>
          </li>
        {% endfor %}
      </ul>

      <div class="cart-total">
        <p>Subtotal: <strong>{{ cart.total_price | money }}</strong></p>
      </div>

      <div class="cart-actions">
        <a href="/cart" class="btn btn-outline">View Cart</a>
        <a href="/checkout" class="btn btn-primary">Checkout</a>
      </div>

    {% else %}
      <div class="cart-empty">
        <p>Your cart is empty.</p>
      </div>
    {% endif %}
  </div>
</div>

<style>
.cart-drawer {
  position: fixed;
  right: 0;
  top: 0;
  width: 360px;
  height: 100%;
  background: #fff;
  box-shadow: -4px 0 15px rgba(0, 0, 0, 0.1);
  transform: translateX(100%);
  transition: 0.3s ease-in-out;
  z-index: 9999;
}
.cart-drawer.active { transform: translateX(0); }
.cart-drawer-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 18px;
  border-bottom: 1px solid #eee;
  background: #fafafa;
}
.cart-drawer-header h2 { margin: 0; font-size: 18px; font-weight: 700; }
.cart-drawer-body { padding: 20px; overflow-y: auto; height: calc(100% - 70px); }
.cart-item { display: flex; gap: 12px; margin-bottom: 16px; align-items: center; }
.cart-item img { width: 60px; border-radius: 8px; }
.cart-item-info h4 { margin: 0; font-size: 14px; font-weight: 600; }
.cart-item-info p { margin: 2px 0; font-size: 13px; color: #555; }
.cart-total { margin-top: 15px; border-top: 1px solid #eee; padding-top: 10px; font-size: 15px; font-weight: 600; }
.cart-actions { margin-top: 20px; display: flex; flex-direction: column; gap: 10px; }
.cart-actions .btn { display: block; text-align: center; padding: 12px; border-radius: 8px; text-decoration: none; }
.btn-primary { background: #000; color: #fff; font-weight: 700; }
.btn-outline { border: 1px solid #000; color: #000; background: transparent; font-weight: 600; }
.cart-empty { text-align: center; padding: 50px 0; color: #666; font-size: 15px; }
</style>
