<!-- Enhanced Payment Selector & Form - Rabisa Store -->
<style>
  /* Container */
  .payment-method-section {
    margin-top: 25px;
    background: #f9fafb;
    border-radius: 14px;
    padding: 22px;
    box-shadow: 0 4px 15px rgba(0,0,0,0.07);
  }

  /* Label */
  .payment-method-section label {
    display: block;
    font-weight: 700;
    font-size: 17px;
    color: #111;
    margin-bottom: 10px;
  }

  /* Dropdown */
  .payment-method-select {
    width: 100%;
    padding: 12px;
    border-radius: 12px;
    border: 1px solid #ccc;
    background: #fff;
    font-size: 15px;
    transition: all 0.25s ease;
  }

  .payment-method-select:focus {
    border-color: #111;
    box-shadow: 0 0 0 4px rgba(0,0,0,0.05);
  }

  /* Payment Info Boxes */
  .payment-info-box {
    margin-top: 18px;
    padding: 16px;
    border-radius: 12px;
    background: #fff;
    border: 1px solid #ddd;
    display: none;
    animation: fadeIn 0.4s ease;
  }

  .payment-info-box.active {
    display: block;
  }

  .payment-info-box strong {
    color: #000;
    font-weight: 700;
  }

  /* Form Styling */
  .checkout-form {
    margin-top: 18px;
    background: #fff;
    padding: 18px;
    border-radius: 12px;
    border: 1px solid #ddd;
  }

  .form-group {
    position: relative;
    margin-bottom: 15px;
  }

  .form-group input {
    width: 100%;
    padding: 12px 10px;
    border-radius: 10px;
    border: 1px solid #ccc;
    font-size: 15px;
    outline: none;
    transition: all 0.2s ease;
  }

  .form-group input:focus {
    border-color: #111;
    box-shadow: 0 0 0 3px rgba(0,0,0,0.05);
  }

  .form-group label {
    position: absolute;
    top: 50%;
    left: 12px;
    transform: translateY(-50%);
    background: #fff;
    padding: 0 5px;
    color: #666;
    font-size: 14px;
    pointer-events: none;
    transition: 0.2s ease all;
  }

  .form-group input:focus + label,
  .form-group input:not(:placeholder-shown) + label {
    top: -8px;
    font-size: 12px;
    color: #111;
    font-weight: 600;
  }

  /* Required Star */
  .required-star {
    color: #e63946;
    font-weight: bold;
  }

  /* Fade Animation */
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(5px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* Responsive */
  @media (max-width: 600px) {
    .payment-method-section {
      padding: 16px;
    }
    .checkout-form {
      padding: 14px;
    }
  }
</style>

<div class="payment-method-section">
  <label for="paymentMethod">Choose Payment Method:</label>
  <select id="paymentMethod" class="payment-method-select">
    <option value="cod">üíµ Cash on Delivery</option>
    <option value="jazzcash">üì± JazzCash (5% OFF)</option>
    <option value="bank">üè¶ Meezan Bank (5% OFF)</option>
  </select>

  <!-- JazzCash Info -->
  <div id="jazzcashInfo" class="payment-info-box">
    <strong>JazzCash Payment Details:</strong><br>
    Account Number: <b>0321-7815858</b><br>
    Please share your <b>receipt screenshot or number</b> via WhatsApp at <b>0321-7815858</b>.<br><br>
    <em>5% discount will be automatically applied at checkout.</em>
  </div>

  <!-- Meezan Bank Info -->
  <div id="bankInfo" class="payment-info-box">
    <strong>Meezan Bank Details:</strong><br>
    Account Title: <b>RABISA STORE</b><br>
    IBAN: <b>PK47 MEZN 0004 0301 0456 4834</b><br>
    Branch Code: <b>0403</b><br>
    Branch: <b>Peoples Colony, Faisalabad</b><br>
    Send receipt screenshot to <b>rabistastore@gmail.com</b> or WhatsApp at <b>+92 321 7815858</b>.<br><br>
    <em>5% discount will be automatically applied at checkout.</em>
  </div>

  <!-- Elegant Checkout Info Form -->
  <form class="checkout-form">
    <div class="form-group">
      <input type="text" id="fullName" name="name" placeholder=" " required>
      <label for="fullName">Full Name <span class="required-star">*</span></label>
    </div>

    <div class="form-group">
      <input type="email" id="email" name="email" placeholder=" " required>
      <label for="email">Email <span class="required-star">*</span></label>
    </div>

    <div class="form-group">
      <input type="tel" id="phone" name="phone" placeholder=" " required>
      <label for="phone">Phone Number <span class="required-star">*</span></label>
    </div>

    <div class="form-group">
      <input type="text" id="address" name="address" placeholder=" ">
      <label for="address">Address</label>
    </div>
  </form>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const select = document.getElementById('paymentMethod');
    const jazzcashBox = document.getElementById('jazzcashInfo');
    const bankBox = document.getElementById('bankInfo');

    select.addEventListener('change', function() {
      // Hide both boxes first
      jazzcashBox.classList.remove('active');
      bankBox.classList.remove('active');

      // Show selected info + apply discount
      if (this.value === 'jazzcash') {
        jazzcashBox.classList.add('active');
        window.location.href = '/discount/JAZZ20?redirect=/cart';
      } else if (this.value === 'bank') {
        bankBox.classList.add('active');
        window.location.href = '/discount/EASYP20?redirect=/cart';
      } else {
        window.location.href = '/cart';
      }
    });
  });
</script>
